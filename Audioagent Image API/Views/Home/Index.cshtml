<div class="jumbotron">
    <h1>ASP.NET</h1>
    <p class="lead">ASP.NET is a free web framework for building great Web sites and Web applications using HTML, CSS, and JavaScript.</p>
    <p><a href="http://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
</div>
<div class="row">
    <div class="col-md-4">
        <h2>Image API</h2>
        @{
            var GetImageByUrlFormId = "api__image__getByUrl--form";
            var GetImageByUrlButtonId = "api__image__getByUrl--submit";
            var GetImageByUrlOuputId = "api__image__getByUrl--output";
        }
        <form id="@GetImageByUrlFormId">
            <span>
                <input name="url" placeholder="{URL}" type="text" />
                <button id="@GetImageByUrlButtonId" type="button">Submit</button>
            </span>
        </form>
        <div id="@GetImageByUrlOuputId">

        </div>
    </div>
</div>

@section scripts{
    <script>
        $(document).ready(function () {
            $('form#@GetImageByUrlFormId').keypress(function (e) {
                if (e.keyCode == 13) {
                    $('#@GetImageByUrlButtonId').click();
                    e.preventDefault();
                    return false;
                }

            });

            $('#@GetImageByUrlButtonId').click(function () {
                $.ajax({
                    dataType: "json",
                    method: 'get',
                    url: '@(Url.Action("Get", "api/image"))',
                    data: $('form#@GetImageByUrlFormId').serializeArray(),
                    success: function (response) {
                        var imageModel = response;
                        $('#@GetImageByUrlOuputId').text(JSON.stringify(imageModel));
                    },
                    error: function (jqXHR, textStatus, errorThrown) {
                        $('#@GetImageByUrlOuputId').text(jqXHR.responseText);
                    }
                });
            });
        });
    </script>
}